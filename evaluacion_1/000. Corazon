def corazon():
  h=5
  espacio=" "
  asterisco="*"
  b=h//2
  print espacio*b+asterisco*b+espacio+asterisco*b
  h=h-1
  for i in range(h,0,-1):
    for ne in range(h-i):
      espacio=espacio+" "
    for na in range(1,2*i-1):
      asterisco=asterisco+"*"
    print espacio+asterisco
    espacio=" "
    asterisco="*"
corazon()
