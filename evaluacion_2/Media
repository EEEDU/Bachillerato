#include<iostream>
/*Calcular la media*/
int main(){
  char salir;
  int a,n[a],i;
  float suma,media;
  suma=0;
  std::cout<<"Dime cuantos examenes tienes: ";
  std::cin>>a;
  for (i=1;i<=a;i++){
    std::cout<<"Cuanto has sacado en el examen ";
    std::cout<<i;
    std::cout<<": ";
    std::cin>>n[i];
    std::cout<<"\n";
      suma=suma+n[i];
  }
  media=suma/a;
  std::cout<<"Esta es tu media: ";
  std::cout<<media;
  std::cin>>salir;           
}
