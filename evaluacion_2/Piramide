#include<iostream>

int main(){
    char salir;
    int h;
    int i,ne,na;
    std::cout << "Cuanta altura desee que tenga: ";
    std::cin >> h;
    for(i=1;i<=h;i++){
        for(ne=1;ne<=h-i;ne++){
            std::cout<<' ';
        }
        for(na=1;na<=2*i-1;na++){
            std::cout<<'*';
        }
    std::cout<<"\n";
    } 
    std::cin>>salir;           
}
