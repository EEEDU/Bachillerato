#include<iostream>
/*Cambiar mayusculas por minusculas*/
int dev_lon(char pal[]){
    int lon=0;
    int i=0;
    while(pal[i]!='\0'){
      lon++;
      i++;
    }
    return(lon);
}
int main(){
  char salir;
  char i,pal;
  int a;
  std::cout<<"Dime la palabra: ";
  std::cin>>pal;
  for(i=0;i<dev_lon(pal);i++){
      
  }
  std::cout<<"Dime el codigo ascii"<<std::endl;
  std::cin>>a;
  i=a;
  std::cout<<"El caracter es: "<<i<<std::endl;
  std::cin>>salir;
}
