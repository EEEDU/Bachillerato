#include<iostream>
/*Listas, nos pide 4 numeros y los guarda en una lista*/
int main(){
  char salir;
  int n[4],i;
  for (i=1;i<=4;i++){
    std::cout<<"Intrtoduce un numero ";
    std::cout<<i;
    std::cout<<": ";
    std::cin>>n[i];
    std::cout<<"\n";
  }
  std::cout<<"Estos son los numeros:\n";
  for (i=1;i<=4;i++){
    std::cout<<n[i];
    if (i<=3){
      std::cout<<", ";
    }
    else{
      std::cout<<".";
    }
  }  
  std::cin>>salir;           
}
